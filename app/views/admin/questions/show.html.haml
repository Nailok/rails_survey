%b= t('.show') + " #{@question.title}"

%table.table.table-hover
  %tr
    %th{width: '80%'}= han(:variant, :title)
    %th{width: '20%'}= t('.control')
    %br
    =link_to t('.add_variant'), new_admin_question_variant_path(@question), class: 'btn btn-info'
  - @question.variants.each do |variant|
    %tr
      %td= variant.title
      %td
        = link_to t('.edit'), edit_admin_variant_path(variant), class: 'btn btn-info'
        %br
        = button_to t('.destroy'), admin_variant_path(variant), method: :delete, class: 'btn btn-info'
