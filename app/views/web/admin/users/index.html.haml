= link_to t('.add_admin'), new_admin_admin_path, class: 'btn btn-info m-2'
= link_to t('.add_respondent'), new_admin_respondent_path, class: 'btn btn-info m-2'

%table.table.table-hover
  %tr
    %th= han(:user, :id)
    %th= han(:user, :first_name)
    %th= han(:user, :last_name)
    %th= han(:user, :type)
    %th= han(:user, :email)
    %th= han(:user, :phone)
    %th= han(:user, :state)
    %th= t('.control')
  - @users.each do |user|
    %tr
      %td= link_to user.id, admin_user_path(user.id), target: :_blank
      %td= user.first_name
      %td= user.last_name
      %td= user.type
      %td= user.email
      %td= user.phone
      %td= hsn(:user, 'state', user.state)
      %td
        = link_to t('.edit'), edit_admin_user_path(user.id), class: 'btn btn-info m-1 btn-block'
        - user.state_events.each do |event|
          %br
          = link_to hsen(:user, 'state', event), {:action => event.to_sym, :id => user.id}, method: :put, class: 'btn btn-info m-1 btn-block'
          
